reset
LIB=-1.1d

alias vlb='reset;mkdir -p log; rm -rf work; vlib work'
alias vlgr='vlog -f filelist_rtl.f  +cover=bcefs -nocoverfec -l ./log/vlogr.log'
alias vlgt='vlog -f filelist_tb.f -l ./log/vlogt.log'
alias vlg='vlgr; vlgt'

alias vsm='vsim -c uart_tb_top -wlf vsim.wlf -solvefaildebug -assertdebug -assertcover -sva -coverage -voptargs=+acc -l ./log/vsim.log +UVM_VERBOSITY=UVM_MEDIUM -sv_lib ../libs/uvm-1.1d/lib/uvm_dpi64 -do "coverage save -onexit -assert -code bcefs -directive -cvg ucdb/uart.ucdb;add wave -r /uart_tb_top/*; run -all; quit"'


alias viw='vsim -view vsim.wlf -do wave.do &'
alias exc='vsim -viewcov ucdb/uart.ucdb -do coverage_exclude.do &'

alias check_error_model='grep -r "ERROR" ./DRAM*.log'

